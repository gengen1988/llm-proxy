    provider: openai-dev
    # override:
    #   model: textembedding-gecko-multilingual@001

providers:
  - name: perplexity-dev
    module: perplexity
    apiKey: <REDACTED>
    polyfills:
      penaltyWhenConflict: presence # presence or frequency

  - name: vertex-dev
    module: vertex
    apiKey: <REDACTED>
    polyfills:
      paddingUserMessage: true
      mergeMessagesInSeries: true

  - name: openai-dev
    module: openai
    apiKey: <REDACTED>
    # baseURL: xxx # set when use compatible backend

  - name: anthropic-dev
    module: anthropic
    apiKey: <REDACTED>
